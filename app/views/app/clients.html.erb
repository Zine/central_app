<% if flash[:success] %>
  <div class="notification is-success">
    <%= flash[:success] %>
  </div>
<% end %>
<div class="columns">
  <div class="column is-2">
    <div class="card">
      <div class="card-content">
        <%= render template: "layouts/menu.html" %>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card">
      <div class="card-content">
        <%= form_with(url: '/app/clients', method: :post, local: true) do |f| %>
          <div class="field">
            <%= f.submit('Actualizar', class: "button is-text") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
